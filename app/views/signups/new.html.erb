<div class="signup">
  <div class="container">
    <h1>Signup</h1>
    <%= form_for @signup, 
              url: {action: "create"}, 
              method: :post do |f| %>
      <%= f.text_field :firstname, placeholder: "Name" %>
      <%= f.email_field :email, placeholder: "Email" %>
      <%= f.submit "Signup" %>
    <% end %>
  </div>
</div>